<div class="jumbotron m-3">
  <h1 class="display-4">Ramazon!</h1>
  <p class="lead">This is Simple Amazon linke Web App!</p>
  <hr class="my-4">
  <a class="waves-effect waves-light btn" href="/products">Show Products</a>
</div>



<div class="row">
    <% @recently_products.each do |product| %>
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          <span class="card-title"><%= product.name %></span>
        </div>
        <div class="card-content">
          <p><%= product.description %></p>
        </div>
        <div class="card-action">
          <%= link_to "Show Product", product_path(product) %>
        </div>
      </div>
    </div>
    <% end %>
</div>
