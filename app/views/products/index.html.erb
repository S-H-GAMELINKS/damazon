<p id="notice"><%= notice %></p>

<%= search_form_for @q, remote: true, id: 'search_category' do |f| %>
  <%= f.label :category_id_cont, 'カテゴリー' %>
  <%= f.collection_select :category_id_eq, @categories, :id, :name, {data: {remote: true}} %>
  <%= f.submit '', :style => 'display: none;' %>
<% end %>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.category %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @products %>

<%= link_to 'New Product', new_product_path %>

<script type="text/javascript">

const selectElement = document.querySelector('#search_category');

selectElement.addEventListener('change', (event) => {
  selectElement.submit();
});
</script>
