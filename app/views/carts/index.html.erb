<h1>Cart Index</h1>

<% if @cart %>
    <%= link_to 'Remove All Items', cart_path(@cart), method: 'delete', data: {confirm: 'OK?'} %>

    <% @cart.cart_items.each do |item| %>
        <%= item.item.name %>
        <%= item.item.price %>
        <%= item.item.description %>
        <%= form_with model: item, local: true do |form| %>
            <%= form.number_field :quantity %>
            <%= form.submit "Buy", data: { confirm: 'Are you sure?' } %>
        <% end %>
        <%= link_to 'Remove Cart', cart_item_path(item), data: {confirm: 'Are you sure?'}, method: :delete %>
    <% end %>

    <%= link_to 'Order', cart_path(@cart), method: :put%>

    <%= @total %>
<% end %>